{
    "name": "asanpay/asanpay",
    "description": "AsanPay Backend Layer",
    "homepage": "http://asanpay.com/",
    "authors": [
        {
            "name": "Aboozar Ghaffari",
            "email": "aboozar.ghf@gmail.com"
        }
    ],
    "keywords": [
        "Asanpay",
        "API"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.4",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pgsql": "*",
        "ext-redis": "*",
        "ext-soap": "*",
        "ext-tokenizer": "*",
        "asanpay/shaparak": "dev-master",
        "creativeorange/gravatar": "^1.0",
        "doctrine/dbal": "2.5.*",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^6.10",
        "laravel/tinker": "^2.0",
        "spatie/laravel-medialibrary": "^8.0.0",
        "spatie/laravel-referer": "^1.6",
        "spatie/regex": "^1.4",
        "tartan/laravel-custom-validator": "^5.0",
        "tartan/laravel-iranian-sms": "^1.2",
        "tartan/laravel-jalali-date": "^6.0",
        "tartan/laravel-xlog": "^1.2",
        "wikimedia/composer-merge-plugin": "^1.3.1"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.0",
        "nunomaduro/collision": "^3.0",
        "facade/ignition": "^1.4"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {}
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "*"
            ]
        },
        "merge-plugin": {
            "include": [
                "app/Ship/composer.json",
                "app/Ship/core/composer.json",
                "app/Containers/*/composer.json",
                "app/Containers/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-dev": true,
            "merge-extra": false,
            "merge-extra-deep": false,
            "merge-scripts": true
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
